{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@controllers/*": ["controllers/*"],
      "@core/*": ["core/*"],
      "@database/*": ["database/*"],
      "@errors/*": ["errors/*"],
      "@logger/*": ["logger/*"],
      "@middleware/*": ["middleware/*"],
      "@repositories/*": ["repositories/*"],
      "@routers/*": ["routers/*"],
      "@services/*": ["services/*"],
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts"
  ]
}
