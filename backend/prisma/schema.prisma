generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Credentials {
  player_id  String  @id @default(uuid())  // Use String type for UUID
  email      String @unique
  password   String
  created_at DateTime @default(now())

  // Define the relation with Player, specifying `fields` and `references`
  player     Player? @relation(fields: [player_id], references: [player_id])
}

model Player {
  username   String
  player_id  String  @id  // Use String type for UUID
  gold       Int     @default(0)

  // Define the relation without `fields` and `references`
  credentials Credentials? // Just reference the `Credentials` model without `fields` or `references`
}

